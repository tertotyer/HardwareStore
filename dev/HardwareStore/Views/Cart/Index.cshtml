@model IEnumerable<CartItem>

@if (Model.Count() != 0)
{
    int totalCost = 0;
    @foreach (var cartItem in Model)
    {
        <p>@cartItem.ThingId - @cartItem.Quantity - @cartItem.Thing.Name <a asp-action="RemoveFromCart" asp-route-id="@cartItem.ThingId">Remove</a></p>
        totalCost += cartItem.Quantity;
    }
    <h1>@totalCost</h1>
    <a asp-controller="Orders" asp-action="Create">Оформить заказ</a>
}
