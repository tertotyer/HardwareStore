@model HardwareStore.Models.Order

@{
    ViewData["Title"] = "Details";

    var totalCost = 0;
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameBuyer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameBuyer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryMethod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryMethod)
        </dd>
        <dd>
            <br />
            @foreach (var cartItem in Model.CartItems)
            {
                totalCost += cartItem.Thing.Price * cartItem.Quantity;
                <a asp-action="Details" asp-controller="Things" asp-route-id="@cartItem.ThingId">@cartItem.Thing.Name - @cartItem.Quantity - @cartItem.Thing.Price</a> <br />
            }
        </dd>
    </dl>
    <br />
    <p>TotalCost : @totalCost</p>
    <br />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
